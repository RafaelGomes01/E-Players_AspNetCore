@* Chamando a pagina Equipe *@
@model Equipe

@* Definindo um titulo para a pagina equipe *@
@{
    ViewData["Title"] = "Equipes";
}

@* Formulario para cadastro *@
<form method="POST" action='@Url.Action("Cadastrar")' enctype="multipart/form-data">
    <label>ID</label>
    <input type="text" name="IdEquipe">

    <label>Nome</label>
    <input type="text" name="Nome">

    <label>Imagem</label>
    <input type="file" name="Imagem">

    <button type="submit">Cadastrar</button>
</form>

@* Tabela de exibição *@
<table class="table table-striped table-responsive">
    <thead>
        <th>ID</th>
        <th>Nome</th>
        <th>Imagem</th>
        <th>Deletar</th>
    </thead>

    <tbody>
        @foreach (Equipe equipe in ViewBag.Equipes)
        {
            <tr>
                <td>@equipe.IdEquipe</td>
                <td>@equipe.Nome</td>
                <td><img src="/img/Equipes/@equipe.Imagem" alt="Imagem da equipe @equipe.Nome" width="40"></td>
                <td><a asp-area="Link para excluir equipe" asp-controller="Equipe" asp-action="Excluir" asp-route-id="@equipe.IdEquipe">Excluir</a></td>
            </tr>
        }
    </tbody>
</table>